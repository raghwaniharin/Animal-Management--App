<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="task4_1.Pages.InvestmentForecast"
             Title="InvestmentForecast">
    <VerticalStackLayout>
        <Entry x:Name="LiveStockName" Placeholder="Enter Livestock type(Cow/Sheep): " Margin="10"/>
        <Label Text="Enter Quantity of:" Margin="10"/>
        <Entry x:Name="LiveStockQuantity" Placeholder="Enter Quantity of" Margin="10"/>
        <Button Clicked="CalculateStats" Text="Calculate Stats" Margin="10"/>
    </VerticalStackLayout>
</ContentPage>
