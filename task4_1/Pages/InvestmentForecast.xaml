<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="task4_1.Pages.InvestmentForecast"
             Title="InvestmentForecast">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>
        <Entry x:Name="Enter LiveStock type: "
        <Label Text="Enter Investment Quantity of cow" Grid.Row="1" Margin="10" />
        <Label Text="Farm Daily Profit" Grid.Row="2" Margin="10" />

        <Label x:Name="govttax" Grid.Row="1" Grid.Column="1" Margin="10" HorizontalOptions="EndAndExpand" />
        <Label x:Name="farmdailyprofit" Grid.Row="2" Grid.Column="1" Margin="10" HorizontalOptions="EndAndExpand" />
        <Button Grid.Column="0" Grid.Row="3" Clicked="CalulateStats" Text="CalculateStats"/>
    </Grid>
</ContentPage>