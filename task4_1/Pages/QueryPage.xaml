<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="task4_1.Pages.QueryPage"
             Title="QueryPage">
    <Grid Margin="0,30" ColumnDefinitions="250,400" ColumnSpacing="50" HorizontalOptions="Center"
          RowDefinitions="*,*,*" RowSpacing="25" VerticalOptions="Center">
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="FontSize" Value="Small"/>
                <Setter Property="HeightRequest" Value="100"/>
                <Setter Property="WidthRequest" Value="350"/>
            </Style>
        </Grid.Resources>
        <Entry x:Name="TypeEntry" Placeholder="Enter livestock type (Cow or Sheep)::" Grid.Row="0"
               Grid.Column="0"/>
        <Label x:Name="ResultLabel" Grid.Row="0" Grid.Column="1"
               BackgroundColor="PeachPuff" TextColor="Black" Text="result here::::"/>

        <Entry x:Name="ColourEntry" Placeholder="Enter livestock colour::" Grid.Row="1" Grid.Column="0"/>
        
         <Button Grid.Column="0" Grid.Row="2" Clicked="IdEntryBtn_click" Text="OK"/>
        <Button Text="Reset" Clicked="OnResetClicked" Grid.Row="2" Grid.Column="1" />
    </Grid>
</ContentPage>